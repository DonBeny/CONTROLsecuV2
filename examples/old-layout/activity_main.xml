<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical"
    android:weightSum="100"

    android:background="@drawable/fond_vertical2"

    tools:context=".controllers.activities.MainActivity" >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="50"

        android:layout_gravity="center_horizontal" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_alignParentBottom="true"

            android:src="@drawable/logo_mob2" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="50"

        android:layout_gravity="center_horizontal" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_alignParentTop="true"

            android:src="@drawable/new_controlsecu" />

    </RelativeLayout>

    <TextView android:id="@+id/main_activity_version_txt"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="10"

        android:layout_gravity="bottom|right"
        android:gravity="bottom"
        android:layout_marginBottom="0dp"
        android:layout_marginRight="0dp"

        android:text="version : 2.0.10" />

</LinearLayout>