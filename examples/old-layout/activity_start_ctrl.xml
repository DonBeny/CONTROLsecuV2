<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical"
    android:weightSum="100"
    android:background="@drawable/fond_vertical2"

    tools:context=".controllers.activities.StartCtrlActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="20"

        android:gravity="center_horizontal|center_vertical"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="30dp"

        android:autoSizeTextType="uniform"
        android:autoSizeMinTextSize="10sp"
        android:autoSizeMaxTextSize="40sp"
        android:autoSizeStepGranularity="2sp"

        android:tag="m"
        android:onClick="makeCtrl"

        android:background="@drawable/button_selected_orange"
        android:textColor="@color/_white"
        android:textAllCaps="true"
        android:text="@string/lbl_mensuel" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="20"

        android:gravity="center_horizontal|center_vertical"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="30dp"

        android:autoSizeTextType="uniform"
        android:autoSizeMinTextSize="10sp"
        android:autoSizeMaxTextSize="40sp"
        android:autoSizeStepGranularity="2sp"

        android:tag="t"
        android:onClick="makeCtrl"

        android:background="@drawable/button_selected_orange"
        android:textColor="@color/_white"
        android:textAllCaps="true"
        android:text="@string/lbl_trimestriel" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="20"

        android:gravity="center_horizontal|center_vertical"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="30dp"

        android:autoSizeTextType="uniform"
        android:autoSizeMinTextSize="10sp"
        android:autoSizeMaxTextSize="40sp"
        android:autoSizeStepGranularity="2sp"

        android:tag="s"
        android:onClick="makeCtrl"

        android:background="@drawable/button_selected_orange"
        android:textColor="@color/_white"
        android:textAllCaps="true"
        android:text="@string/lbl_semestriel" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="20"

        android:gravity="center_horizontal|center_vertical"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="30dp"

        android:autoSizeTextType="uniform"
        android:autoSizeMinTextSize="10sp"
        android:autoSizeMaxTextSize="40sp"
        android:autoSizeStepGranularity="2sp"

        android:tag="a"
        android:onClick="makeCtrl"

        android:background="@drawable/button_selected_orange"
        android:textColor="@color/_white"
        android:textAllCaps="true"
        android:text="@string/lbl_annuel" />

</LinearLayout>