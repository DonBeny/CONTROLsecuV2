<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".controllers.activities.MakeSelectActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/main_ctrl_secu" >

        <TextView android:id="@+id/make_select_activity_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal|center_vertical"
            android:layout_marginTop="6dp"
            android:padding="25dp"
            android:textColor="@color/_white"
            android:textSize="20sp"
            android:textAllCaps="true"
            android:text="@string/lbl_select_entry" />

        <TextView android:id="@+id/make_select_activity_prev_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="20dp"
            android:onClick="makeSelectActivityActions"
            android:tag="cancel"
            android:textColor="@color/_white"
            android:textSize="35sp"
            android:text="@string/_prev" />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout android:id="@+id/make_select_activity_lyt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

        </LinearLayout>

    </ScrollView>

</LinearLayout>